<!--pages/myself/myself.wxml-->
<view class="myself-top">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
</view>
<view class="myself-list">
    <view class="myself-list-left"><image src="../../images/icon_my_1.png" class="icon-1"></image><text>登录手机号</text></view>
    <view class="myself-list-right"><text>138****0000</text></view>
</view>
<view class="myself-item arrow-right">
    <view class="myself-list-left"><image src="../../images/icon_my_2.png" class="icon-1"></image><text>实名认证</text></view>
    <view class="myself-list-right"><text class="ar-verify">已认证</text><text>郭丽丽</text></view>
</view>
<view class="myself-list arrow-right">
    <view class="myself-list-left"><image src="../../images/icon_my_3.png" class="icon-1"></image><text>银行卡</text></view>
    <view class="myself-list-right"><text class="no-verify">未认证</text></view>
</view>
<view class="myself-list arrow-right">
    <view class="myself-list-left"><image src="../../images/icon_my_4.png" class="icon-1"></image><text>登录密码</text></view>
</view>
<view class="myself-item arrow-right">
    <view class="myself-list-left"><image src="../../images/icon_my_5.png" class="icon-1"></image><text>支付密码</text></view>
</view>
<view class="myself-item arrow-right">
    <view class="myself-list-left"><image src="../../images/icon_my_6.png" class="icon-1"></image><text>关于</text></view>
</view>
