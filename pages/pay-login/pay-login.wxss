.pay-login-box{
    padding:0 40rpx;
}
.pay-login-av{
    display:flex;
    flex-direction:column;
    padding:120rpx 0 60rpx;
    align-items: center;
}
.userinfo-avatar{
    width:160rpx;
    height:160rpx;
    border-radius:80rpx;
}
.userinfo-nickname{
    padding-top:20rpx;
    font-size:30rpx;
}
.tip{
    padding-top:20rpx;
    font-size:30rpx;
}
.pay-login-pwd{
    width:auto;
    height:88rpx;
    border-bottom:1px solid #cccccc;
}
.pwd-screen{
    text-align:center;
    line-height:88rpx;
}
.login-btn{
    margin:45rpx 0;
    background-color:#ed414d;
    border-radius:20rpx;
    height:88rpx;
    line-height:88rpx;
    color:#ffffff;
    font-size:36rpx;
    text-align:center;
}
.login-bar{
    display:flex;
    justify-content:flex-end;
    font-size:30rpx;
    color:#586b95;
}